<!DOCTYPE html>
<html>
<head>
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Healkeep</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/angular.min.js"></script>

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                        
                        @Html.ImageActionLink("Healkeep", "Index", "Home", new { area = "" }, new { @style = "float: left;padding: 8px 6px 8px 16px" }, "~/Content/Images/logo-healkeep-small.png")
                        @Html.ActionLink("Healkeep", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", @style = "font-size: 2em;" })
                        @*@Html.Image("~/Content/Images/logo2-healkeep-small.png", "Logo")*@

            </div>
            
            <div class="navbar-collapse collapse">
                @*<ul class="nav navbar-nav">*@
                <ul class="nav navbar-nav navbar-right">
                    <li>@Html.ActionLink("Sobre nosotros", "About", "Home", new { @style = "" })</li>
                    <li>@Html.ActionLink("Contáctenos", "Contact", "Home", new { @style = "" })</li>
                    @if (User.IsInRole("Admin"))
                    {
                        <li>@Html.ActionLink("Admini", "Index", "Admin", new { @style = "" })</li>
                    }
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div class="container body-content">
              
        @RenderBody()
        <hr />
        <footer>

            <div style="padding:5px">
                @{
                    foreach (var i in Healkeep.SiteLanguages.AvailableLanguages)
                    {
                        @Html.ActionLink(i.LangFullName, "Register", "Account", new { lang = i.LangCultureName }, null) <text>&nbsp;</text>
                    }
                }
            </div>
            <hr />
            <p>&copy; @DateTime.Now.Year - Healkeep</p>

        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
