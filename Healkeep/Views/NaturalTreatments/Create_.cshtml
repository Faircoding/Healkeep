@model Healkeep.Models.NaturalTreatments

@{
    ViewBag.Title = "Tratamiento Natural";
}

<h2>@ViewBag.DiseaseName</h2>


@*@Html.Partial("_Disease")*@


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Adicionar Tratamiento Natural</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ScoreUsers, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ScoreUsers, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ScoreUsers, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.ScoreEntities, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.ScoreEntities, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.ScoreEntities, "", new { @class = "text-danger" })
            </div>
        </div>
                
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.TextAreaFor(model => model.Description, new { cols = 60, rows = 10, @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Description, "", new { @class = "text-danger" })
            </div>
        </div>


        <div class="form-group">
            @Html.LabelFor(model => model.Treatment, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">

                <label>@*<input type="checkbox" value=true>*@</label>
                @*(bool)@ViewBag.IsTreat>*@
                @Html.CheckBoxFor(m => m.Treatment)
                @Html.ValidationMessageFor(model => model.Treatment, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Prevention, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.CheckBoxFor(m => m.Prevention)
                @*<label><input type="checkbox" value=@ViewBag.Prevention></label>*@
                @*@Html.EditorFor(model => model.Prevention, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.Prevention, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.DiseaseID, "DiseaseID", htmlAttributes: new { @class = "hidden" })
            <div class="col-md-10">
                @Html.DropDownList("DiseaseID", null, htmlAttributes: new { @class = "hidden" })
                @Html.ValidationMessageFor(model => model.DiseaseID, "", new { @class = "hidden" })
            </div>
        </div>
        
        <div class="form-group">
            @Html.LabelFor(model => model.AspNetUserID, "AspNetUserID", htmlAttributes: new { @class = "hidden" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.AspNetUserID, new { htmlAttributes = new { @class = "hidden" } })
                @Html.ValidationMessageFor(model => model.AspNetUserID, "", new { @class = "hidden" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>

        @*<div class="form-group">
            @Html.LabelFor(model => model.DiseaseID, "DiseaseID", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("DiseaseID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.DiseaseID, "", new { @class = "text-danger" })
            </div>
        </div>*@

    </div>
}

<div>

    @Html.ActionLink("Volver a la lista de tratamientos", "Details", "Diseases", new { id = ViewBag.NuiID }, null)
    
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}


