                       InsertionMode = InsertionMode.Replace
                   }, new { style = "null" })
                }*@
                
            </div>

            <div style="float:left">
                <span class="badge">@Html.DisplayTextFor(modelItem => Model.VoteDown)</span>
                @Ajax.ImageAjaxActionLink("../../Content/Images/down.png", "VoteDown", "VoteDown", "Comments", new { commentId = Model.CommentID }, new AjaxOptions
                                                                                                                                       {
                                                                                                                                           HttpMethod = "POST",
